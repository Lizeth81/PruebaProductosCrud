@model PruebaProducto.Models.VM.ProductoVM

@{
    ViewData["Title"] = "Detalle del Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card">
    <div class="text-center">
        <h1 class="display-4">Producto</h1>
    </div>
    <div class="card-body">
        <hr />
        <form asp-action="ProductoDetalle" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oProducto.IdProducto"/>
            <div class="mb-2">
                <label class="col-form-label" asp-for="oProducto.Nombre">Nombre del producto</label>
                <input class="form-control form-control-sm" type="text" asp-for="oProducto.Nombre" required/>
            </div>
            <div class="mb-2">
                <label class="col-form-label" asp-for="oProducto.Descripcion">Descripción</label>
                <input class="form-control form-control-sm" type="text" asp-for="oProducto.Descripcion" required />
            </div>
            <div class="mb-2">
                <label class="col-form-label" asp-for="oProducto.Precio">Precio</label>
                <input class="form-control form-control-sm" type="text" asp-for="oProducto.Precio" required />
            </div>
            <div class="mb-2">
                <label class="col-form-label" asp-for="oProducto.FechaCreacion">Fecha</label>
                <input class="form-control form-control-sm" type="date" asp-for="oProducto.FechaCreacion" required />
            </div>
            <div class="mb-2">
                <label class="col-form-label" asp-for="oProducto.oEstado.IdEstado">Estado</label>
                <select class="form-select form-select-sm" asp-for="oProducto.IdEstado" asp-items="@Model.oListaProducto">
                    <option selected disabled>Seleccionar estado</option>
                </select>
            </div>
            <div class="mb-2">
                @if(Model.oProducto.IdProducto == 0)
                {
                    <button class="btn btn-primary btn-sm" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-success btn-sm" type="submit">Actualizar</button>
                }
                <a class="btn btn-sm" asp-action="Index" asp-controller="Home"> Volver</a>
            </div>
         </form>
    </div>

</div>


